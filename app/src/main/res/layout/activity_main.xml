<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- RadioGroup fÃ¼r Tap-Modi -->
    <RadioGroup
        android:id="@+id/tapModeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center"
        android:background="@android:color/white">

        <RadioButton
            android:id="@+id/radioPlayChord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŽµ Akkord"
            android:textSize="11sp"
            android:checked="true"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />

        <RadioButton
            android:id="@+id/radioRotateToDur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”µ Dur"
            android:textSize="11sp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />

        <RadioButton
            android:id="@+id/radioRotateToMoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”´ Moll"
            android:textSize="11sp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />
    </RadioGroup>

    <!-- RadioGroup fÃ¼r Akkord-Typ -->
    <RadioGroup
        android:id="@+id/chordTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center"
        android:background="@android:color/white">

        <RadioButton
            android:id="@+id/radioAllMajor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alles Dur"
            android:textSize="10sp"
            android:paddingStart="1dp"
            android:paddingEnd="1dp" />

        <RadioButton
            android:id="@+id/radioAllMinor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alles Moll"
            android:textSize="10sp"
            android:paddingStart="1dp"
            android:paddingEnd="1dp" />

        <RadioButton
            android:id="@+id/radioHarmonic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Harmonie"
            android:textSize="10sp"
            android:checked="true"
            android:paddingStart="1dp"
            android:paddingEnd="1dp" />
    </RadioGroup>

    <!-- RadioGroup fÃ¼r Tonleiter-Typ -->
    <RadioGroup
        android:id="@+id/scaleTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center"
        android:background="@android:color/white">

        <RadioButton
            android:id="@+id/radioMajorScale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dur-Tonleiter"
            android:textSize="10sp"
            android:checked="true"
            android:paddingStart="1dp"
            android:paddingEnd="1dp" />

        <RadioButton
            android:id="@+id/radioNaturalMinor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nat. Moll"
            android:textSize="10sp"
            android:paddingStart="1dp"
            android:paddingEnd="1dp" />

        <RadioButton
            android:id="@+id/radioHarmonicMinor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Harm. Moll"
            android:textSize="10sp"
            android:paddingStart="1dp"
            android:paddingEnd="1dp" />
    </RadioGroup>

    <!-- Button zum Abspielen der Tonleiter der aktuellen Note -->
    <Button
        android:id="@+id/buttonPlayScale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â–¶ Tonleiter abspielen"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/black" />

    <!-- ChordDiscView (wird programmatisch hinzugefÃ¼gt) -->
    <FrameLayout
        android:id="@+id/chordDiscContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

