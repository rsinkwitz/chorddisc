<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Titel -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black" />

    <!-- Label und RadioGroup für Tonleiter-Typ -->
    <TextView
        android:id="@+id/scaleTypeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scale_type_label"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="2dp"
        android:background="@android:color/white" />

    <RadioGroup
        android:id="@+id/scaleTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center"
        android:background="@android:color/white">

        <RadioButton
            android:id="@+id/radioMajorScale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/scale_major"
            android:textSize="11sp"
            android:checked="true"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />

        <RadioButton
            android:id="@+id/radioNaturalMinor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/scale_natural_minor"
            android:textSize="11sp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />

        <RadioButton
            android:id="@+id/radioHarmonicMinor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/scale_harmonic_minor"
            android:textSize="11sp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />
    </RadioGroup>

    <!-- Label und RadioGroup für Tap-Modi -->
    <TextView
        android:id="@+id/tapModeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tap_mode_label"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:background="@android:color/white" />

    <RadioGroup
        android:id="@+id/tapModeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center"
        android:background="@android:color/white">

        <RadioButton
            android:id="@+id/radioPlayChord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tap_play_chord"
            android:textSize="11sp"
            android:checked="true"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />

        <RadioButton
            android:id="@+id/radioRotateToTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tap_rotate_to_top"
            android:textSize="11sp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />
    </RadioGroup>

    <!-- Label und RadioGroup für Akkord-Typ -->
    <TextView
        android:id="@+id/chordTypeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chord_type_label"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:background="@android:color/white" />

    <RadioGroup
        android:id="@+id/chordTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center"
        android:background="@android:color/white">

        <RadioButton
            android:id="@+id/radioHarmonic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chord_harmony"
            android:textSize="11sp"
            android:checked="true"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />

        <RadioButton
            android:id="@+id/radioAllMajor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chord_major"
            android:textSize="11sp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />

        <RadioButton
            android:id="@+id/radioAllMinor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chord_minor"
            android:textSize="11sp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp" />
    </RadioGroup>

    <!-- ChordDiscView (wird programmatisch hinzugefügt) -->
    <FrameLayout
        android:id="@+id/chordDiscContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Toggle für Transparenz der oberen Scheibe -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/toggleTransparency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/transparencyLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/toggle_transparency"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Toggle für Sprache -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/toggleLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/languageLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/toggle_language"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="8dp" />
    </LinearLayout>

</LinearLayout>

